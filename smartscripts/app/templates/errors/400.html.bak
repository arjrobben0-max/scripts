{% extends "base.html" %}

{% block title %}400 Bad Request{% endblock %}

{% block content %}
<div class="container mt-5">
  <div class="alert alert-danger shadow-sm text-center py-5">
    <h1 class="display-4">400 - Bad Request</h1>
    <p class="lead mt-3">
      {{ reason or "Your request was malformed or missing required information." }}
    </p>
    <a href="{{ url_for('teacher_bp.dashboard_bp.dashboard') }}" class="btn btn-primary mt-4">
      ⬅️ Go Back to Dashboard
    </a>
  </div>
</div>
{% endblock %}


