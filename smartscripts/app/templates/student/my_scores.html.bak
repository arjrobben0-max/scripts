<h2>My Marked Scripts</h2>
{% if submissions %}
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Test ID</th>
      <th>Score</th>
      <th>Feedback</th>
      <th>Marked Script</th>
    </tr>
  </thead>
  <tbody>
  {% for s in submissions %}
    <tr>
      <td>{{ s.test_id|default('N/A')|e }}</td>
      <td>{{ s.score|default('Pending')|e }}</td>
      <td>
        {% if s.feedback %}
          {{ s.feedback|e }}
        {% else %}
          <span class="text-muted">No feedback</span>
        {% endif %}
      </td>
      <td>
        {% if s.file_path %}
          <a href="{{ url_for('static', filename=s.file_path|replace('uploads/', '')|e) }}"
             target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline-primary">
            View
          </a>
        {% else %}
          <span class="text-muted">N/A</span>
        {% endif %}
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% else %}
  <p class="text-muted">No results yet.</p>
{% endif %}


