{% extends "base.html" %}
{% block title %}Corrected Submissions{% endblock %}

{% block content %}
<div class="container mt-4">
  <h2>📝 Corrected OCR Submissions</h2>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>PDF Path</th>
        <th>Corrected Name</th>
        <th>Corrected ID</th>
        <th>Reviewed By</th>
      </tr>
    </thead>
    <tbody>
      {% for s in submissions %}
        <tr>
          <td>{{ s.pdf_path }}</td>
          <td>{{ s.corrected_name or '—' }}</td>
          <td>{{ s.corrected_id or '—' }}</td>
          <td>{{ s.reviewed_by }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}


