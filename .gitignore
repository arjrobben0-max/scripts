# -----------------------
# Python cache/compiled files
# -----------------------
__pycache__/
*.py[cod]
*$py.class

# -----------------------
# Virtual environments
# -----------------------
env/
venv/

# -----------------------
# Node.js (if used for frontend)
# -----------------------
node_modules/

# -----------------------
# Uploads, logs, and runtime data
# -----------------------
uploads/
logs/
*.log

# -----------------------
# Testing artifacts
# -----------------------
tests/
coverage/
htmlcov/

# -----------------------
# Environment and config files
# -----------------------
.env
*.env
*.ini
*.toml
*.cfg

# -----------------------
# Local databases
# -----------------------
*.sqlite3
*.db

# -----------------------
# IDE/editor/system files
# -----------------------
.vscode/
.idea/
*.swp
.DS_Store
*.bak

# -----------------------
# Ignore secrets or instance folders
# -----------------------
instance/
secrets.json

# -----------------------
# Git metadata (usually safe to keep, but optional)
# -----------------------

echo ".venv/" >> .gitignore
echo "__pycache__/" >> .gitignore
echo "*.pyd" >> .gitignore
echo "*.dll" >> .gitignore
echo "*.lib" >> .gitignore
echo "*.exe" >> .gitignore
echo "*.zip" >> .gitignore
echo "*.mp4" >> .gitignore
echo "*.pth" >> .gitignore
echo "*.pt" >> .gitignore
echo "*.h5" >> .gitignore
